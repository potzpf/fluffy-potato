<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.agiprojekt.Main">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Klasse I"
        android:layout_marginTop="30px"
        android:id="@+id/usredt_textView_ph1"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Klasse II"
        android:id="@+id/usredt_textView_ph2"
        android:layout_marginTop="40px"
        android:layout_below="@id/usredt_textView_ph1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Klasse III"
        android:id="@+id/usredt_textView_ph3"
        android:layout_marginTop="40px"
        android:layout_below="@id/usredt_textView_ph2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Klasse IV"
        android:id="@+id/usredt_textView_ph4"
        android:layout_marginTop="40px"
        android:layout_below="@id/usredt_textView_ph3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Klasse V"
        android:id="@+id/usredt_textView_ph5"
        android:layout_marginTop="40px"
        android:layout_below="@id/usredt_textView_ph4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Klasse VI"
        android:id="@+id/usredt_textView_ph6"
        android:layout_marginTop="40px"
        android:layout_below="@id/usredt_textView_ph5"/>

    <EditText
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/usredt_editText_ph1"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

    <EditText
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/usredt_editText_ph2"
        android:layout_below="@id/usredt_editText_ph1"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

    <EditText
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/usredt_editText_ph3"
        android:layout_marginTop="5dp"
        android:layout_below="@id/usredt_editText_ph2"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

    <EditText
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/usredt_editText_ph4"
        android:layout_marginTop="3dp"
        android:layout_below="@id/usredt_editText_ph3"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

    <EditText
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/usredt_editText_ph5"
        android:layout_marginTop="2dp"
        android:layout_below="@id/usredt_editText_ph4"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

    <EditText
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/usredt_editText_ph6"
        android:layout_marginTop="2dp"
        android:layout_below="@id/usredt_editText_ph5"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

    <Spinner
        android:layout_width="200px"
        android:layout_height="40dp"
        android:id="@+id/usredt_spinner_ph1"
        android:layout_alignParentRight="true" />

    <Spinner
        android:layout_width="200px"
        android:layout_height="40dp"
        android:id="@+id/usredt_spinner_ph2"
        android:layout_alignParentRight="true"
        android:layout_below="@id/usredt_editText_ph1"
        android:layout_marginTop="5dp"/>

    <Spinner
        android:layout_width="200px"
        android:layout_height="40dp"
        android:id="@+id/usredt_spinner_ph3"
        android:layout_alignParentRight="true"
        android:layout_below="@id/usredt_editText_ph2"
        android:layout_marginTop="5dp"/>

    <Spinner
        android:layout_width="200px"
        android:layout_height="40dp"
        android:id="@+id/usredt_spinner_ph4"
        android:layout_alignParentRight="true"
        android:layout_below="@id/usredt_editText_ph3"
        android:layout_marginTop="5dp"/>

    <Spinner
        android:layout_width="200px"
        android:layout_height="40dp"
        android:id="@+id/usredt_spinner_ph5"
        android:layout_alignParentRight="true"
        android:layout_below="@id/usredt_editText_ph4"
        android:layout_marginTop="5dp"/>

    <Spinner
        android:layout_width="200px"
        android:layout_height="40dp"
        android:id="@+id/usredt_spinner_ph6"
        android:layout_alignParentRight="true"
        android:layout_below="@id/usredt_editText_ph5"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:text="Änderungen bestätigen"
        android:id="@+id/usr_btn_edit"
        android:layout_alignParentBottom="true" />


</RelativeLayout>